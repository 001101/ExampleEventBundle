<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_example_event.commandbus" class="League\Tactician\CommandBus">
            <argument type="collection">
                <argument type="service" id="League\Tactician\Doctrine\ORM\TransactionMiddleware"/>
                <argument type="service" id="League\Tactician\Handler\CommandHandlerMiddleware"/>
            </argument>
        </service>

        <service id="League\Tactician\Handler\CommandNameExtractor\ClassNameExtractor"/>
        <service id="League\Tactician\Handler\MethodNameInflector\HandleInflector"/>
        <service id="League\Tactician\Handler\Locator\InMemoryLocator">
            <argument type="collection">
                <argument
                        key="Sulu\Bundle\ExampleEventBundle\Model\Command\CreateEventCommand"
                        type="service"
                        id="Sulu\Bundle\ExampleEventBundle\Model\Handler\CreateEventHandler"
                />
                <argument
                        key="Sulu\Bundle\ExampleEventBundle\Model\Command\ModifyEventCommand"
                        type="service"
                        id="Sulu\Bundle\ExampleEventBundle\Model\Handler\ModifyEventHandler"
                />
                <argument
                        key="Sulu\Bundle\ExampleEventBundle\Model\Command\RemoveEventCommand"
                        type="service"
                        id="Sulu\Bundle\ExampleEventBundle\Model\Handler\RemoveEventHandler"
                />
                <argument
                        key="Sulu\Bundle\ExampleEventBundle\Model\Query\FindEventQuery"
                        type="service"
                        id="Sulu\Bundle\ExampleEventBundle\Model\Handler\FindEventQueryHandler"
                />
            </argument>
        </service>

        <service id="League\Tactician\Handler\CommandHandlerMiddleware">
            <argument type="service" id="League\Tactician\Handler\CommandNameExtractor\ClassNameExtractor"/>
            <argument type="service" id="League\Tactician\Handler\Locator\InMemoryLocator"/>
            <argument type="service" id="League\Tactician\Handler\MethodNameInflector\HandleInflector"/>
        </service>

        <service id="League\Tactician\Doctrine\ORM\TransactionMiddleware">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
    </services>
</container>

