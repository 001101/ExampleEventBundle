<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"
                 alias="Sulu\Bundle\ExampleEventBundle\Repository\EventRepository"
                 class="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"/>

        <service id="Sulu\Bundle\ExampleEventBundle\Model\Handler\CreateEventHandler">
            <argument type="service" id="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"/>
        </service>

        <service id="Sulu\Bundle\ExampleEventBundle\Model\Handler\ModifyEventHandler">
            <argument type="service" id="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"/>
        </service>

        <service id="Sulu\Bundle\ExampleEventBundle\Model\Handler\RemoveEventHandler">
            <argument type="service" id="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"/>
        </service>

        <service id="Sulu\Bundle\ExampleEventBundle\Model\Handler\FindEventQueryHandler">
            <argument type="service" id="Sulu\Bundle\ExampleEventBundle\Model\EventRepositoryInterface"/>
        </service>
    </services>
</container>
